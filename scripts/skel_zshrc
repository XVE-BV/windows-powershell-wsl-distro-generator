#!/bin/zsh

# /etc/skel/.zshrc

# add ~/bin to PATH if it exists
if [ -d "$HOME/bin" ] && [[ ":$PATH:" != *":$HOME/bin:"* ]]; then
  PATH="$HOME/bin:$PATH"
fi

# Jump straight into /apps on interactive shells
if [[ -o interactive && $(id -u) -ne 0 ]]; then
cd /apps
fi

# On first interactive login, ensure GPG & pass are set up
if [[ -o interactive ]]; then
  # Only run once per user
  SETUP_MARKER="$HOME/.gpg_pass_initialized"
  if [ ! -f "$SETUP_MARKER" ]; then
    # Check for any secret GPG keys
    if ! gpg --list-secret-keys --with-colons | grep -q '^sec'; then
      echo
      echo "🔐 GPG key and pass store not found. Running setup..."
      # Run the interactive setup script
      bash ~/bin/setup-gpg-pass.sh
    fi
    # Mark done so we don’t prompt again
    touch "$SETUP_MARKER"
    echo
  fi
fi

if [[ -o interactive && -z "$SSH_AGENT_STARTED" ]]; then
  export SSH_AUTH_SOCK=/tmp/ssh-agent.sock
  nohup /usr/local/bin/wsl2-ssh-agent \
    --addr /tmp/ssh-agent.sock \
    --pipe "$(cmd.exe /C "echo %SSH_AUTH_SOCK%" | tr -d '\r\n')" \
    > /dev/null 2>&1 &
  export SSH_AGENT_STARTED=1
fi

# Show XVE logo in green
GREEN=$'\e[32m'
RESET=$'\e[0m'

# Show XVE logo in green, preserving alignment
printf '%b\n' "${GREEN}____  _______   _______________${RESET}"
printf '%b\n' "${GREEN}\   \/  /\   \ /   /\_   _____/${RESET}"
printf '%b\n' "${GREEN} \     /  \   Y   /  |    __)_ ${RESET}"
printf '%b\n' "${GREEN} /     \   \     /   |        \\\\${RESET}"
printf '%b\n' "${GREEN}/___/\  \   \___/   /_______  /${RESET}"
printf '%b\n' "${GREEN}      \_/                   \/ ${RESET}"
echo


# Make nano the default editor
export VISUAL=nano
export EDITOR="$VISUAL"

# Laravel Sail function and shortcuts
sail() {
  if [[ -f ./vendor/bin/sail ]]; then
    zsh ./vendor/bin/sail "$@"
  else
    echo "vendor/bin/sail not found"
  fi
}
alias s='sail '
alias sa='sail artisan '
alias sc='sail composer '
alias sm='sa migrate'
alias smf='sa migrate:fresh'
alias smfs='sa migrate:fresh --seed'
alias sus='s up -d'
alias sdown='s stop'

# Powerlevel10k instant prompt (if installed)
if [[ -r "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh" ]]; then
  source "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh"
fi

source /opt/powerlevel10k/powerlevel10k.zsh-theme
[[ -f ~/.p10k.zsh ]] && source ~/.p10k.zsh
